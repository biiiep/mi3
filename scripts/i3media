#!/bin/sh

dbus_send()
{
    dbus-send --session --print-reply \
            --dest="org.mpris.MediaPlayer2.vlc" \
            /org/mpris/MediaPlayer2 \
            org.mpris.MediaPlayer2.Player.$@
}

dbus_send_2()
{
    dbus-send --session --print-reply \
            --dest="org.mpris.MediaPlayer2.vlc" \
            /org/mpris/MediaPlayer2 \
            org.mpris.MediaPlayer2.$@
}

case "$1" in
    next)
        dbus_send Next
        ;;
    pause)
        dbus_send Pause
        ;;
    play)
        dbus_send Play
        ;;
    previous)
        dbus_send Previous
        ;;
    quit)
        dbus_send_2 Quit
        ;;
    raise)
        dbus_send_2 Raise
        ;;
	*)
		echo "$0 <next|previouse|pause|play|quit|raise>"
		exit 1
esac

# vim:set ts=4 sw=4 ft=sh et:
